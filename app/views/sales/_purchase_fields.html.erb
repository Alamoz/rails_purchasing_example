  <div class="nested-fields">

  <table>
  	<tr>
  		<td>
		  <div class="field">
		    <%= f.label "Product" %>
		    <%= f.select(:product_id, @products.collect {|p| [ p.item, p.id ] }) %>
		  </div>
  		</td>

  		<td>
		  <div class="field">
		    <%= f.label :quantity %>
		    <%= f.number_field :quantity, id: :quantity %>
		  </div>
  		</td>

  		<td>
  			<%= link_to_remove_association "remove item", f %>
  		</td>
  	</tr>
  </table>

  </div>
  
